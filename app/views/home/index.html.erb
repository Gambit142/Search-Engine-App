<main>
  <h1>Search Engine</h1>
  <section>
    <% if user_signed_in? %>
      <h4>Hi! <%= current_user.name.capitalize %> </h4>
      <%= button_to 'Shorten Url', long_urls_path, method: :get %>
    <% else %>
      <h4>Welcome</h4>
      <div>
        <%= button_to 'LOG IN', new_user_session_path, method: :get %>
        <%= button_to 'SIGN UP', new_user_registration_path, method: :get %>
      </div>
    <% end %>
    <%= render partial: "shared/sign_out" %>
  </section>
</main>